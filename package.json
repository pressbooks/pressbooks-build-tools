{
  "name": "pressbooks-build-tools",
  "version": "0.13.0",
  "description": "NPM package which includes all asset linting and build tools for Pressbooks projects.",
  "main": "index.js",
  "scripts": {
    "fix": "npm run -s fix:scripts",
    "fix:scripts": "node_modules/eslint/bin/eslint.js --fix \"config/*.js\"",
    "lint": "npm run -s lint:scripts",
    "lint:scripts": "node_modules/eslint/bin/eslint.js \"config/*.js\"",
    "precommit": "lint-staged",
    "test": "npm run -s lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pressbooks/pressbooks-build-tools.git"
  },
  "author": "Pressbooks <code@pressbooks.com> (Book Oven Inc.)",
  "license": "gpl-3.0-or-later",
  "bugs": {
    "url": "https://github.com/pressbooks/pressbooks-build-tools/issues"
  },
  "homepage": "https://github.com/pressbooks/pressbooks-build-tools#readme",
  "dependencies": {
    "babel-eslint": "^10.0.0",
    "browser-sync": "^2.23.6",
    "browser-sync-webpack-plugin": "^2.0.1",
    "cross-env": "^5.1.3",
    "eslint": "^5.0.0",
    "eslint-config-humanmade": "^0.5.0",
    "eslint-config-react-app": "^3.0.3",
    "eslint-loader": "~2.1",
    "eslint-plugin-flowtype": "^3.0.0",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-jquery": "^1.3.2",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "laravel-mix": "^2.0.0",
    "prettier": "^1.10.2",
    "prettier-stylelint": "^0.4.2",
    "rimraf": "~2.6",
    "stylelint": "^9.0.0",
    "stylelint-config-recommended-scss": "^3.0.0",
    "stylelint-scss": "^3.0.0",
    "stylelint-webpack-plugin": "^0.10.2",
    "wp-pot-cli": "^1.1.0"
  },
  "eslintConfig": {
    "extends": "./config/eslint.js"
  },
  "lint-staged": {
    "config/*.js": [
      "npm run -s fix:scripts",
      "git add"
    ]
  }
}
